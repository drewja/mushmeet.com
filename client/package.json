{
  "name": "my-rollup-project",
  "version": "1.0.0",
  "description": "",
  "watch": {
    "build": {
      "patterns": [
        "src",
        "src/static"
      ],
      "extensions": "js,css,html"
    }
  },
  "scripts": {
    "start": "npm run build && npm run watch & http-server dist",
    "build": "rollup --config && npm run static",
    "static": "rsync -rmv src/static dist && cp src/index.html dist",
    "clean": "rm -r dist/*",
    "watch": "npm-watch",
    "serve": "http-server dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@rollup/plugin-json": "*",
    "http-server": "*",
    "npm-watch": "*",
    "rollup": "*",
    "rollup-plugin-terser": "*"
  }
}
